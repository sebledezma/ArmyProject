{% extends 'team/teams.html.twig' %}
{% block teambody %}
    <h1>List Of Cars</h1>
    <p><a href="{{ path('caredit') }}">ADD NEW CAR</a></p>
    <br/>
    <table>
        <thead>
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Datasheet</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            {% set brand = car.carBrand is null ? "N/A" :
                                            car.carBrand.brandName %}
            <tr>
                <td>{{ brand }}</td>
                <td>{{ car.carModel }}</td>
                <td>
                    <a href="{{ path('carshow', { 'carId': car.carId }) }}">
                        SHOW DATASHEET</a></td>
                <td>
                    <a href="{{ path('caredit', { 'carId': car.carId }) }}">
                        EDIT CAR</a></td>
                <td>
             <a href="{{ path('cardel', { 'carId': car.carId }) }}">
                        REMOVE CAR</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
